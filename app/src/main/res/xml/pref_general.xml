<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/title_location"
        android:defaultValue="@string/pref_location_default_value"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:key="@string/pref_temperature_key"
        android:title="@string/title_temperature"
        android:defaultValue="@string/pref_temperature_default_value"
        android:entries="@array/temperature_units"
        android:entryValues="@array/temperature_unit_values" />

</PreferenceScreen>